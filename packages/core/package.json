{
  "name": "plain-bottom-sheet-core",
  "version": "0.0.1",
  "description": "A performant, zero-dependency, fully-typed bottom-sheet.",
  "private": false,
  "sideEffects": false,
  "license": "MIT",
  "type": "module",
  "main": "dist/plain-bottom-sheet-core.cjs.js",
  "module": "dist/plain-bottom-sheet-core.es.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/plain-bottom-sheet-core.es.js",
      "require": "./dist/plain-bottom-sheet-core.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@internal/eslint-config": "workspace:*",
    "@internal/typescript-config": "workspace:*",
    "@types/node": "^20.12.3",
    "eslint": "^8.57.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.8.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
